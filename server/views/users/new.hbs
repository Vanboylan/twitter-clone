<body>
    <button margin="right"><a href='/sessions/new'>Sign In</a></button>
        <header><h1><a href="/" id="twitter-logo">A twitter rip-off</a></h1></header>
       
        <main>
            
            <form class="signup-form" action="/users" method="post">
                <label for="username">Username:</label>
                <input type="input-text" id="username" name="username" placeholder="Username" required>
                <label for="email">Email address:</label>
                <input type="input-text" id="email" name="email" placeholder="Email address" required>
                                <label for="firstname">First Name:</label>
                <input type="input-text" id="firstname" name="firstname" placeholder="First name" required>
                                                <label for="lastname">Last Name:</label>
                <input type="input-text" id="lastname" name="lastname" placeholder="Last name" required>
                  <label for="birthday">Birthday:</label>
  <input type="date" id="birthday" name="birthday">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="password"> 
                <label for="passwordcheck">Repeat password:</label>
                <input type="password" id="passwordcheck" placeholder="Repeat password">
                <input class="input-button" id="submit" type="submit" value="submit">
                <br><br>
                <input type="checkbox" id="display-password" onclick="showPassword()">Show password

                <script> function showPassword() {
                    const password = document.getElementById("password");
                    if (password.type === "password") {
                      password.type = "input-text";
                    } else {
                      password.type = "password";
                    }
                  }
                  function matchPassword() {
                    return document.getElementById("password") === document.getElementById("passwordcheck")
                  }
                </script>
                
            </form>
            
        </main>
        
